<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/blue_light"
    tools:context=".fragment.CalculateFragment">


    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ic_love"/>

    <TextView
        android:textColor="@color/blue"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Calculator"/>
    <TextView
        android:layout_marginTop="30dp"
        android:text="Fist Name"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColorHint="@color/blue_light"
        android:textSize="30dp"
        android:padding="8dp"
        android:hint="Me"
        android:id="@+id/female_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="text"
        android:background="@drawable/edittext"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="Second Name"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColorHint="@color/blue_light"
        android:textSize="30dp"
        android:padding="8dp"
        android:hint="You"
        android:id="@+id/male_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="text"
        android:background="@drawable/edittext"/>

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="200dp"
        android:padding="10dp"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="12dp"
        android:id="@+id/calculate_btn"
        android:textSize="20dp"
        android:text="Calculate"
        android:layout_marginHorizontal="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
          android:layout_marginTop="60dp"
          android:src="@drawable/love_ic"
          android:layout_width="50dp"
          android:layout_height="50dp"/>
      <TextView
          android:layout_marginLeft="-55dp"
          android:layout_marginTop="110dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Home"
          android:textSize="20dp"
          android:textColor="@color/black"/>

      <ImageView
          android:layout_marginLeft="250dp"
          android:layout_marginTop="60dp"
          android:src="@drawable/love_ic"
          android:layout_width="50dp"
          android:layout_height="50dp"/>
      <TextView
          android:layout_marginLeft="-50dp"
          android:layout_marginTop="110dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="History"
          android:textSize="20dp"
          android:textColor="@color/black"/>
  </LinearLayout>
</LinearLayout>